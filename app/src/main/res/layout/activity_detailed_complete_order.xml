                        <TextView
                            android:id="@+id/new_order_number"
                            android:layout_width="match_parent"
                            android:textAlignment="viewEnd"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:layout_gravity="end"
                            android:text="number"
                            android:textSize="@dimen/secondary_text"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:text="Contact Phone number :"
                            android:textSize="@dimen/secondary_text"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            android:id="@+id/new_order_contact_number"
                            android:layout_width="match_parent"
                            android:textAlignment="viewEnd"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:layout_gravity="end"
                            android:text="number"
                            android:textSize="@dimen/secondary_text"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:text="Address"
                            android:textSize="@dimen/secondary_text"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            android:id="@+id/new_order_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:layout_gravity="end"
                            android:text="012B, Ashiana Gulmohar Park, Bhiwadi, Rajasthan, "
                            android:textSize="@dimen/secondary_text"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:text="Pincode :"
                            android:textSize="@dimen/secondary_text"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            android:id="@+id/new_order_pincode"
                            android:layout_width="match_parent"
                            android:textAlignment="viewEnd"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:layout_gravity="end"
                            android:text="301019"
                            android:textSize="@dimen/secondary_text"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:text="State :"
                            android:textSize="@dimen/secondary_text"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            android:id="@+id/new_order_state"
                            android:layout_width="match_parent"
                            android:textAlignment="viewEnd"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:layout_gravity="end"
                            android:text="Rajsathan"
                            android:textSize="@dimen/secondary_text"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:text="Discount :"
                            android:textSize="@dimen/secondary_text"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            android:id="@+id/new_order_discount"
                            android:layout_width="match_parent"
                            android:textAlignment="viewEnd"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:layout_gravity="end"
                            android:text="10 %"
                            android:textSize="@dimen/secondary_text"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:text="GSTIN :"
                            android:textSize="@dimen/secondary_text"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            android:id="@+id/new_order_gstin"
                            android:layout_width="match_parent"
                            android:textAlignment="viewEnd"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:layout_gravity="end"
                            android:text="OD09282672525"
                            android:textSize="@dimen/secondary_text"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/less_padding"
                        android:layout_marginEnd="@dimen/less_padding"
                        android:layout_marginTop="@dimen/less_padding"
                        android:layout_marginBottom="@dimen/less_padding"
                        android:background="@color/text_color"/>
                    <LinearLayout
                        android:id="@+id/my_order_full_details"
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/less_padding"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:text="Items Ordered:"
                            android:textSize="@dimen/secondary_text"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_margin="@dimen/less_padding"
                            android:id="@+id/new_order_items_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/less_padding"
                        android:layout_marginEnd="@dimen/less_padding"
                        android:layout_marginTop="@dimen/standard_margin"
                        android:layout_marginBottom="@dimen/standard_margin"
                        android:background="@color/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginTop="@dimen/less_padding"
                        android:layout_marginBottom="@dimen/standard_margin"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/pending_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:fontFamily="monospace"
                            android:text="Pending"
                            android:background="@color/colorAccent"
                            android:padding="@dimen/standard_margin"
                            android:textSize="@dimen/secondary_text"
                            android:textStyle="bold"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"
                            android:layout_gravity="center"/>
