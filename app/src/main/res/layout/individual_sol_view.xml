<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/card_view_radius"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="@color/cardviewColor"
    android:layout_alignParentTop="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_margin"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/sol_name_of_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of file"
                android:textColor="@color/text_color"
                android:textSize="@dimen/page_titles"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color"
                android:layout_marginTop="@dimen/less_padding"/>
            <TextView
                android:id="@+id/sol_date"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:maxLines="2"
                android:textColor="@color/text_color"
                android:textSize="@dimen/secondary_text"/>


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:padding="@dimen/standard_margin"
            android:layout_margin="@dimen/standard_margin"
            android:id="@+id/view"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="@dimen/card_view_radius"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_margin"
                android:text="View"
                android:textSize="@dimen/modal_text"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.cardview.widget.CardView>
