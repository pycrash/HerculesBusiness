<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="@dimen/standard_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/product_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginLeft="@dimen/standard_margin"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:text="Company Name"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:id="@+id/new_order_name"
                        android:layout_width="match_parent"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:layout_gravity="end"
                        android:text="Name:"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:text="Email:"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:id="@+id/new_order_email"
                        android:layout_width="match_parent"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:layout_gravity="end"
                        android:text="Order ID"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:text="Phone:"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:id="@+id/new_order_phone"
                        android:layout_width="match_parent"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:layout_gravity="end"
                        android:text="Order ID"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:text="Order ID:  "
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:id="@+id/my_order_id"
                        android:layout_width="match_parent"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:layout_gravity="end"
                        android:text="Order ID"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:text="Order Date:  "
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:id="@+id/my_order_date"
                        android:layout_width="match_parent"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:layout_gravity="end"
                        android:text="Order Date"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/less_padding"
                    android:layout_marginEnd="@dimen/less_padding"
                    android:layout_marginTop="@dimen/less_padding"
                    android:layout_marginBottom="@dimen/less_padding"
                    android:background="@color/text_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginTop="@dimen/less_padding"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/my_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:text="Pending"
                        android:background="@color/colorAccent"
                        android:padding="@dimen/standard_margin"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/my_order_price"
                        android:layout_width="wrap_content"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:layout_gravity="center"
                        android:text="Rs 10000"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/my_order_new_price"
                        android:layout_width="wrap_content"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"
                        android:layout_gravity="center"
                        android:text="Rs 10000"
                        android:textSize="@dimen/secondary_text"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/my_order_details"
                    android:layout_margin="@dimen/standard_margin"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View full order details"
                        android:textSize="@dimen/modal_text"
                        android:padding="@dimen/standard_margin"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>
