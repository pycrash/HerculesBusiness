<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text Sizes -->
    <!--
        ** Page Title - Medium Emphasis
        ** Body Text - Normal Emphasis
        ** Modal Text - Normal Emphasis
        ** List Item - Normal Emphasis
        ** Menu Title - Medium Emphasis
        ** Secondary Text - Normal Emphasis
        ** Tab - Medium Emphasis
        ** Button - Medium Emphasis
        ** Text Button - Medium Emphasis
        ** Form Text - Normal Emphasis
        ** Error Text - Normal Emphasis
    -->
    <!-- Modal Text here means short snippets of code, like in alert Dialog -->
    <dimen name="page_big_titles">30sp</dimen>
    <dimen name="page_titles">20sp</dimen>
    <dimen name="paragraph_text">14sp</dimen>
    <dimen name="modal_text">16sp</dimen>
    <dimen name="list_titles">14sp</dimen>
    <dimen name="menu_titles">14sp</dimen>
    <dimen name="important_text_snippets">16sp</dimen>
    <dimen name="secondary_text">14sp</dimen>
    <dimen name="text_input">16sp</dimen>
    <dimen name="buttons">14sp</dimen>
    <dimen name="tabs">14sp</dimen>
    <dimen name="error">12sp</dimen>
    <dimen name="card_view_radius">4dp</dimen>
    <dimen name="small_text">12sp</dimen>


    <!-- Default screen margins, per the Android Design guidelines. -->

    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="standard_margin">8dp</dimen>
    <dimen name="tile_padding">8dp</dimen>
    <dimen name="less_padding">4dp</dimen>

    <!-- Component elevation values  -->
    <!--
        1. Nav drawer: 16dp
        2. App bar: 4dp
        3. Card: 1dp to 8dp
        4. FAB: 6dp
        5. Button: 2dp to 8dp
        6. Dialog: 24dp
    -->

    <!-- Tab Layout Dimensions -->
    <dimen name="tab_max_width">264dp</dimen>
    <dimen name="tab_padding_bottom">16dp</dimen>
    <dimen name="tab_label">14sp</dimen>
    <dimen name="custom_tab_layout_height">72dp</dimen>

</resources>